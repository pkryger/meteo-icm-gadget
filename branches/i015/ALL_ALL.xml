  <msg name="plot_language_polish">Polish</msg>
  <msg name="plot_language_english">English</msg>
  <msg name="forecast_for">Weather Forecast for</msg>
  <msg name="loading_data">Loading meteorogram...</msg>
  <msg name="scale_height">Scale Height</msg>
  <msg name="scale_width">Scale Width</msg>
  <msg name="error_cannot_load">Cannot load meteorogram.</msg>
  <msg name="refresh_button_text">Refresh meteorogram</msg>
  <msg name="refresh_button_tooltip">Click to reload the meteorogram.</msg>
